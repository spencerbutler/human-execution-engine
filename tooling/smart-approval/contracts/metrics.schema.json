{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Metrics Schema",
  "description": "Schema for metrics data used in smart approval system",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the metric measurement"
    },
    "profile": {
      "type": "string",
      "description": "Safety profile name"
    },
    "prompt_rate": {
      "type": "number",
      "minimum": 0,
      "description": "Rate of prompts processed per minute"
    },
    "override_rate": {
      "type": "number",
      "minimum": 0,
      "description": "Rate of human overrides per minute"
    },
    "deny_rate": {
      "type": "number",
      "minimum": 0,
      "description": "Rate of denied requests per minute"
    },
    "safety_incidents": {
      "type": "integer",
      "minimum": 0,
      "description": "Count of safety incidents"
    },
    "phase_day": {
      "type": "integer",
      "minimum": 1,
      "description": "Current phase day"
    },
    "deny_reasons": {
      "type": "object",
      "description": "Breakdown of denial reasons",
      "additionalProperties": {
        "type": "integer",
        "minimum": 0
      }
    },
    "recent_decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "decision": {
            "type": "string",
            "enum": ["approve", "deny", "override"]
          },
          "reason": {
            "type": "string"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "required": ["timestamp", "decision"]
      }
    }
  },
  "required": ["timestamp"]
}