{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Events Schema",
  "description": "Schema for event data used in smart approval system",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the event"
    },
    "event_type": {
      "type": "string",
      "enum": ["prompt_processed", "decision_made", "override_applied", "safety_incident", "replay_test"],
      "description": "Type of event that occurred"
    },
    "profile": {
      "type": "string",
      "description": "Safety profile associated with the event"
    },
    "decision": {
      "type": "string",
      "enum": ["approve", "deny", "override"],
      "description": "Decision outcome"
    },
    "reason": {
      "type": "string",
      "description": "Reason for the decision"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score for the decision"
    },
    "metadata": {
      "type": "object",
      "description": "Additional event metadata",
      "additionalProperties": true
    }
  },
  "required": ["timestamp", "event_type"]
}