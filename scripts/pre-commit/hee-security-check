#!/usr/bin/env bash
set -euo pipefail
echo "üîç Running HEE security checks..."
if grep -R -nE '(password|secret|key|token)' \
  --include="*.md" --include="*.py" --include="*.js" --include="*.json" . \
  | grep -v "docs/HEE_POLICY.md" \
  | grep -v "prompts/PROMPTING_RULES.md" \
  | grep -vE '(test|example|demo)' \
  | head -1 >/dev/null
then
  echo "‚ö†Ô∏è  Potential sensitive information found"
else
  echo "‚úÖ No obvious security issues"
fi
