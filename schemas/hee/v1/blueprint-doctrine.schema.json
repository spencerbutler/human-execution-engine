{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/spencerbutler/human-execution-engine/refs/heads/main/schemas/hee/v1/blueprint-doctrine.schema.json",
  "title": "HEE Blueprint Doctrine (v1)",
  "description": "Kubernetes-style object for doctrine blueprints.",
  "type": "object",
  "additionalProperties": false,
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "pattern": "^hee/v[0-9]+(\\.[0-9]+)?$"
    },
    "kind": {
      "type": "string",
      "const": "BlueprintDoctrine"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "spec": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
